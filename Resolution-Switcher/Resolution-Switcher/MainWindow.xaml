<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ResolutionSwitcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ResolutionSwitcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Resolution Switcher">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Standardhöhe für Titelleiste -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Benutzerdefinierte Titelleiste -->
        <Border x:Name="AppTitleBar" 
                Grid.Row="0" 
                Background="Transparent"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                VerticalAlignment="Top"
                Height="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0" 
                       Glyph="&#xE7F4;" 
                       FontSize="14" 
                       Margin="12,0,8,0"
                       Foreground="{StaticResource PurpleAccentBrush}"
                       VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1"
                           Text="RESOLUTION SWITCHER" 
                           VerticalAlignment="Center" 
                           Margin="0,0,0,0"
                           Foreground="{StaticResource PurpleAccentBrush}"
                           FontSize="12"
                           FontWeight="SemiBold"/>
                
                <!-- Leerer Platz rechts um Platz für Fenstertasten zu lassen -->
                <Grid Grid.Column="2" Width="138" />
            </Grid>
        </Border>

        <!-- Hauptinhalt -->
        <Grid Grid.Row="1" Padding="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Spacer oben -->
            <Rectangle Grid.Row="0" Fill="Transparent"/>
            
            <!-- Erster Button -->
            <Button 
                Grid.Row="1"
                x:Name="Set1440Button" 
                Click="Set1440Button_Click"
                Style="{StaticResource AppButtonStyle}"
                HorizontalAlignment="Center"
                Margin="0,0,0,15">
                <TextBlock Text="SET 1440 × 1080" HorizontalAlignment="Center" />
            </Button>
            
            <!-- Zweiter Button -->
            <Button 
                Grid.Row="2"
                x:Name="RestoreMaxButton" 
                Click="RestoreMaxButton_Click"
                Style="{StaticResource AppButtonStyle}"
                HorizontalAlignment="Center">
                <TextBlock Text="MAXIMUM RESOLUTION" HorizontalAlignment="Center" />
            </Button>
            
            <!-- Auflösungsanzeige -->
            <TextBlock 
                Grid.Row="3"
                x:Name="CurrentResolutionText" 
                Text="Current Resolution: Detecting..." 
                Style="{StaticResource ContentTextStyle}"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="0,5,0,0"/>
        </Grid>
    </Grid>
</Window>
