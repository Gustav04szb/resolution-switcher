<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Strecher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Strecher">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            
            <!-- Farbschema basierend auf der Website-CSS -->
            <Color x:Key="BackgroundColor">#07000d</Color>
            <Color x:Key="PurpleAccent">#a78bfa</Color>
            <Color x:Key="ButtonBackgroundColor">#1a0e2d</Color>
            <Color x:Key="TextColor">#ffffff</Color>
            <Color x:Key="ButtonHoverColor">#d3c1ff</Color>
            <Color x:Key="BorderColor">#2a1d45</Color>
            
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="PurpleAccentBrush" Color="{StaticResource PurpleAccent}"/>
            <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
            
            <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent"/>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent"/>
            
            <!-- Button-Stil nach Website-Design -->
            <Style x:Key="AppButtonStyle" TargetType="Button">
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="#a78bfa"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            
            <!-- Text-Stil für Überschriften nach Website-Design -->
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource PurpleAccentBrush}"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,0,40"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>
            
            <!-- Text-Stil für Inhalte -->
            <Style x:Key="ContentTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="LineHeight" Value="24"/>
            </Style>
            
            <!-- Stil für Nummern -->
            <Style x:Key="NumberTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="{StaticResource NumberBrush}"/>
                <Setter Property="TextAlignment" Value="Right"/>
                <Setter Property="Margin" Value="0,0,0,0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
